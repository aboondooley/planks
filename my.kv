# Note:
# name: name3; The ID is second (name3) while the variable referenced in code is first (name)

<CreateAccountWindow>:
    name: "create"

    firstNameKV: firstName
    lastNameKV: lastName
    maleSexKV: male_sex
    femaleSexKV: female_sex
    otherSexKV: other_sex
    ageKV: age
    emailKV: email
    passwordKV: passw

    #:set row_nums 0.1
    #:set top_pos 1

    FloatLayout:
        cols:1

        FloatLayout:
            size:root.width, root.height/2
            cols:2

            Label:
                text: "Create an Account"
                size_hint: 0.6, row_nums
                pos_hint: {"x":0.2, "top":top_pos}
                font_size: (root.width**2 + root.height**2)/ 14**4

            Label:
                text: "First Name: "
                size_hint: 0.4, 0.1
                pos_hint: {"x":0, "top":top_pos-(0.1*1)}
                font_size: (root.width**2 + root.height**2)/14**4

            TextInput:
                id: firstName
                size_hint: 0.5, 0.1
                pos_hint: {"x":0.4, "top": top_pos-(0.1*1)}
                font_size: (root.width**2 + root.height**2)/14**4
                multiline: False

            Label:
                text: "Last Name: "
                size_hint:0.4, row_nums
                pos_hint: {"x":0, "top":top_pos-(row_nums*2)}
                font_size: (root.width**2 + root.height**2)/14**4

            TextInput:
                id: lastName
                size_hint: 0.5, row_nums
                pos_hint: {"x":0.4, "top":top_pos-(row_nums*2)}
                font_size: (root.width**2 + root.height**2)/14**4
                multiline: False

            Label:
                text: "Age: "
                size_hint:0.4, row_nums
                pos_hint: {"x":0, "top":top_pos-(row_nums*3)}
                font_size: (root.width**2 + root.height**2)/14**4

            TextInput:
            # TODO create numeric input rather than text field?
                id: age
                size_hint: 0.5, row_nums
                pos_hint: {"x":0.4, "top":top_pos-(row_nums*3)}
                font_size: (root.width**2 + root.height**2)/14**4
                multiline: False

            Label:
                text: "Gender: "
                size_hint:0.4, row_nums
                pos_hint: {"x":0, "top":top_pos-(row_nums*4)}
                font_size: (root.width**2 + root.height**2)/14**4


            ToggleButton:
                id: male_sex
                text: "Male"
                group: 'sex_group'
                state: 'normal'
                size_hint: 0.5/3, row_nums
                pos_hint: {"x": 0.4, "top": top_pos-(row_nums*4)}
                font_size: (root.width**2 + root.height**2)/14**4

            ToggleButton:
                id: female_sex
                text: "Female"
                group: 'sex_group'
                state: 'normal'
                size_hint: 0.5/3, row_nums
                pos_hint: {"x": 0.6, "top": top_pos-(row_nums*4)}
                font_size: (root.width**2 + root.height**2)/14**4

            ToggleButton:
                id: other_sex
                text: "Other"
                group: 'sex_group'
                state: 'normal'
                size_hint: 0.5/3, row_nums
                pos_hint: {"x": 0.8, "top": top_pos-(row_nums*4)}
                font_size: (root.width**2 + root.height**2)/14**4

            Label:
                text: "Email: "
                size_hint: 0.4, row_nums
                pos_hint:{"x":0, "top":top_pos-(row_nums*5)}
                font_size: (root.width**2 + root.height**2)/14**4

            TextInput:
                id: email
                size_hint:0.5, row_nums
                pos_hint:{"x":0.4, "top":top_pos-(row_nums*5)}
                font_size: (root.width**2 + root.height**2)/14**4
                multiline:False

            Label:
                text: "Password: "
                size_hint: 0.4, row_nums
                pos_hint: {"x":0, "top":top_pos-(row_nums*6)}
                font_size: (root.width**2 + root.height**2)/14**4

            TextInput:
                id: passw
                size_hint: 0.5, row_nums
                pos_hint: {"x":0.4, "top":top_pos-(row_nums*6)}
                font_size:(root.width**2 + root.height**2)/14**4
                multiline:False
                password:True

        Button:
            text: "Already Have an Account? Log In!"
            size_hint: 0.4, row_nums
            pos_hint: {"x":0.3, "top":top_pos-(row_nums*7)-0.025}
            font_size: (root.width**2 + root.height**2)/17**4
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            text: "Submit"
            size_hint: 0.6, 0.15
            pos_hint: {"x":0.2, "top":top_pos-(row_nums*8)-0.025}
            font_size: (root.width**2 + root.height**2)/14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    emailKV: email
    passwordKV: passw

    FloatLayout:

        Label:
            text: "Email: "
            size_hint: 0.35, 0.15
            pos_hint: {"x": 0.1, "top":0.9}
            font_size: (root.width**2 + root.height**2) / 13**4

        TextInput:
            id: email
            size_hint: 0.4, 0.15
            pos_hint: {"x": 0.45 , "top":0.9}
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False

        Label:
            text: "Password: "
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.1, "top":0.7}
            font_size: (root.width**2 + root.height**2) / 13**4

        TextInput:
            id: passw
            size_hint: 0.4, 0.15
            pos_hint: {"x": 0.45, "top":0.7}
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline:False
            password:True

        Button:
            text: "Login"
            size_hint: 0.6, 0.2
            pos_hint:{"x":0.2,"y":0.05}
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            text: "Don't Have an Account? Create One!"
            size_hint: 0.4, 0.1
            pos_hint: {"x":0.3,"y":0.3}
            font_size: (root.width**2 + root.height**2) / 17**4
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()




<MainWindow>:
    name: "main"

    nameKV: name
    emailKV: email
    createdKV: created

    FloatLayout:

        Label:
            id: name
            text: "Account Name: "
            size_hint:0.8,0.16
            pos_hint:{"x":0.1, "top":0.9}

        Label:
            id: email
            text: "Email: "
            size_hint: 0.8, 0.2
            pos_hint:{"x":0.1, "top": 0.9-(0.16*1)}

        Label:
            id: created
            text: "Created: "
            size_hint: 0.8, 0.2
            pos_hint: {"x": 0.1, "top":0.9-(0.16*2)}

        Button:
            text: "Add Plank"
            size_hint: 0.4, 0.09
            pos_hint: {"x":.3, "top":0.9-(0.16*3)}
            on_release:
                root.addPlankBtn()
                root.manager.transition.direction = "right"


        Button:
            text: "Log Out"
            size_hint: 0.4, 0.09
            pos_hint: {"x": 0.3, "top":0.9-(0.16*4)}
            on_release:
                root.logOut()
                root.manager.transition.direction = "down"



<EnterPlankWindow>:
    name: "plank"

    dateKV: date
    durMinKV: duration_min
    durSecKV: duration_sec
    plankNameKV: plank_name

    #:set date_height 0.1
    #:set logout_height 0.1

    FloatLayout:

        Label:
            text: "Date: "
            size_hint:0.2, date_height
            pos_hint: {"x":0, "top":0.9}
            font_size: (root.width**2 + root.height**2)/14**4

        TextInput:
            id: date
            size_hint: 0.4, date_height
            pos_hint: {"x":0.2, "top":0.9}
            font_size: (root.width**2 + root.height**2)/14**4
            multiline: False

        Label:
            text: "Duration: "
            size_hint: 0.2, date_height
            pos_hint: {"x":0, "top":0.8}
            font_size: (root.width**2 + root.height**2)/14**4

        TextInput:
            id: duration_min
            size_hint: 0.2, date_height
            pos_hint: {"x":0.2, "top":0.8}
            font_size: (root.width**2 + root.height**2)/14**4
            multiline:False

        Label:
            text: "minutes"
            size_hint: 0.2, date_height
            pos_hint: {"x":0.4, "top":0.8}
            font_size: (root.width**2 + root.height**2)/14**4

        TextInput:
            id: duration_sec
            size_hint: 0.2, date_height
            pos_hint: {"x":0.6, "top": 0.8}
            font_size: (root.width**2 + root.height**2)/14**4
            multiline: False

        Label:
            text: "seconds"
            size_hint: 0.2, date_height
            pos_hint: {"x":0.8, "top":0.8}
            font_size: (root.width**2 + root.height**2)/14**4

        Spinner:
            id: plank_name
            text: "Plank Types"
            values: root.plank_names
            size_hint: 0.8, date_height
            pos_hint: {"x":0.1, "top":0.7}
            font_size: (root.width**2 + root.height**2)/14**4
#            on_value:
#                print: "The spinner {} has text {}".format(self, plank_type)

        Button:
            text: "Submit"
            size_hint: 0.6, logout_height
            pos_hint: {"x":0.2, "top":0.3}
            on_release:
                root.submit()


        Button:
            text: "Main Page"
            size_hint: 0.6, logout_height
            pos_hint: {"x":0.2, "top":0.2}
            on_release:
                root.back_main()
                root.manager.transition.direction = "left"